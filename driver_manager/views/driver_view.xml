<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="temp_list_view" model="ir.ui.view">
        <field name="name">driver.user.list</field>
        <field name="model">driver.user</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"></field>
                <field name="place"></field>
                <field name="age" optional="hide"></field>
                <field name="address" optional="hide"></field>
                <field name="email"></field>
                <field name="phone"></field>
                <field name="vehicle_no" optional="hide"></field>
                <field name="licence_no" optional="hide"></field>
                <field name="bdate" optional="hide"></field>
                <field name="Gender"></field>
                <field name="height" optional="hide"></field>
                <field name="single" optional="hide"></field>
                <field name="joined" optional="hide"></field>
                <field name="resume" optional="hide"></field>
        </list>
        </field>
        
    </record>

    
    <record id="temp_form_view" model="ir.ui.view">
        <field name="name">driver.user.form</field>
        <field name="model">driver.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="place"></field>
                        <field name="age"></field>
                        <field name="address"></field>
                        <field name="email"></field>
                        <field name="phone"></field>
                        <field name="vehicle_no"></field>
                        <field name="licence_no"></field>
                        <field name="bdate"></field>
                        <field name="Gender"></field>
                        <field name="height"></field>
                        <field name="single"></field>
                        <field name="joined"></field>
                        <field name="resume"></field>
                </group>
                </sheet>
        </form>
        </field>
        
    </record>


<!-- all drivers action  -->
    <record id="driver_action" model="ir.actions.act_window">
        <field name="name">Drivers</field>
        <field name="res_model">driver.user</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- action for male  -->

    <record id="action_male_view" model="ir.actions.act_window">
        <field name="name">Male</field>
        <field name="res_model">driver.user</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("Gender","=","male")]</field>

    </record>

    <!-- action for female  -->

    <record id="action_female_view" model="ir.actions.act_window">
        <field name="name">Female</field>
        <field name="res_model">driver.user</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("Gender","=","female")]</field>

    </record>
</odoo>
