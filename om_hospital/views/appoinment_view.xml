<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="appointment_view_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <!-- <list editable="bottom"> -->
            <list>
                <field name="reference" ></field>
                <field name="patient_id" ></field>
                <field name="date_appointment" ></field>
                <field name="note" ></field>
                <field name="state"  ></field>
                
            </list>
        </field>
    </record>


    <record id="appointment_view_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button invisible="state != 'draft'"  string="Ongoing" name="action_ongoing" type="object"/>
                    <button invisible="state in ('confirmed','done','cancelled','draft')" class="btn-primary" string="Confirm" name="action_confirm" type="object"/>
                    <button invisible="state in ('done','cancelled')" string="Done" name="action_done" type="object"/>
                    <button invisible="state in ('cancelled','draft')" class="btn-danger" string="Cancel" name="action_cancel" type="object"/>
                    <button invisible="state in ('draft','ongoing','confirmed','done')" string="Reset" name="action_draft" type="object"/>
                    <field name="state" widget='statusbar'></field>
                </header>
                <sheet>
                    <group name="appointment" string="string">
                        <field name="reference" readonly='True' ></field>
                        <field name="patient_id" widget='selection'></field>
                        <field name="date_appointment" ></field>
                        <field name="note" ></field>
                    </group>
                
                </sheet>
                <chatter/>

                
                
            </form>
        </field>
    </record>
   

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
        <p class="o_view_noncontent_smiling_face">
        create a new a[ppointment 
        </p>
        </field>
    </record>

</odoo>
