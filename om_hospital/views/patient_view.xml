<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="model_name_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list >
                <field name="name"></field>
                <field name="date_of_birth" optional="hide"></field>
                <field name="gender" optional="hide"></field>
                <field name="age" optional="hide"></field>
                



            </list>
        </field>
    </record>


    <record id="model_name_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="name" string="string">
                        <group>
                            <field name="name"></field>
                            <field name="date_of_birth"></field>

                        </group>
                        <group >

                            <field name="age"></field>
                            <field name="gender"></field>
                        </group>
                    </group>

                    <notebook>

                        <page string="Products">
                            <field name="product_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                    <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group.user" />
                    <field name="message_ids" />
                </div> -->
                </sheet>
                <chatter/>



            </form>
        </field>
    </record>


    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('model_name_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('model_name_view_form')})
        ]"/>
        <field name="help" type="html">
            <p class="o_view_noncontent_smiling_face">
        create a new patient 
            </p>
        </field>
    </record>

</odoo>
