<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="model_name_view_readonly_tree" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="name"></field>
                <field name="date_of_birth" optional="hide"></field>
                <field name="gender" optional="hide"></field>
                
            </list>
        </field>
    </record>


    <record id="model_name_view_readonly_form" model="ir.ui.view">
        <field name="name">hospital.patient.readonly.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="name" string="string">
                    <group>
                    <field name="name"></field>
                    <field name="date_of_birth"></field>
                    
                    </group>
                    <group >
                        <field name="gender"></field>
                    </group>
                    </group>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" group="base.group.user" />
                    <field name="message_ids" />
                </div> -->
                </sheet>
                <chatter/>

                
                
            </form>
        </field>
    </record>
   

    <record id="action_hospital_patient_readonly" model="ir.actions.act_window">
        <field name="name">Patient view</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
        
        <field name="help" type="html">
        <p class="o_view_noncontent_smiling_face">
        create a new patient 
        </p>
        </field>
    </record>

</odoo>
